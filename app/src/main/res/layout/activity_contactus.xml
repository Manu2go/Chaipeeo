<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:layout="http://schemas.android.com/apk/res-auto"

    tools:context="manan.chaii.contactus">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contactusbar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Contact Us"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/contactusbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navheaderbackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name:"
            android:id="@+id/buyernam"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingBottom="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buyernam1"
            android:layout_below="@+id/buyernam"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back1"
            android:text="Chaipeeo"
            android:textSize="22sp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Address:"
            android:id="@+id/buyerdel"
            android:layout_below="@+id/buyernam1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/buyerdel1"
            android:layout_below="@+id/buyerdel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back1"
            android:hint="Address"
            android:gravity="top"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact No.:"
            android:id="@+id/buyercontact"
            android:layout_below="@+id/buyerdel1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/buyercontact1"
            android:layout_below="@+id/buyercontact"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back1"
            android:hint="Contact No."
            android:gravity="top"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email-Id:"
            android:id="@+id/buyeremail"
            android:layout_below="@+id/buyercontact1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/buyeremail1"
            android:layout_below="@+id/buyeremail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back1"
            android:hint="Email-Id"
            android:gravity="top"
            android:textSize="20sp"
            android:paddingBottom="15dp"/>



    </RelativeLayout>


</RelativeLayout>
